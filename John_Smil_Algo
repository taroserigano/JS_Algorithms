array sum === sum 

// Online Javascript Editor for free
// Write, Edit and Run your Javascript code using JS Online Compiler

let arr = [1,2,3,4,10]

function sol(arr) {
    
    arr.sort((a,b) => a-b)
    let last = arr.pop() 
    
    let sum = arr.reduce((a,b) => a+b)
    return sum === last ? true : false 

}

console.log(sol(arr));


